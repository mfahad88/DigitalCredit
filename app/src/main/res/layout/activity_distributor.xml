<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context="com.example.administrator.digitalcredit.activity.DistributorActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewUserId"
        android:text="UserId: "
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="20dp"/>

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignTop="@id/textViewUserId"
        android:layout_marginTop="20dp"
        android:digits="0123456789"
        android:inputType="number"
        android:padding="5dp"
        android:singleLine="true"
        android:layout_toRightOf="@id/textViewUserId"
        android:id="@+id/editTextOrderId"
        android:background="@drawable/square_edittext"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonInquiry"
        android:text="Inquiry"
        android:layout_toRightOf="@id/editTextOrderId"
        android:background="@drawable/square_edittext"
        android:layout_alignTop="@id/editTextOrderId"
        android:layout_alignBottom="@id/editTextOrderId"
        android:layout_marginLeft="10dp"
        />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="440dp"
        android:layout_margin="15dp"
        android:layout_below="@id/buttonInquiry"
        android:id="@+id/cardView"
        android:layout_centerHorizontal="true"
        app:cardElevation="2dp"
        app:cardBackgroundColor="#1Affffff">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tableLayout"
                    android:layout_gravity="center">

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:padding="5dp"
                            android:text="Product Name" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:padding="5dp"
                            android:text="Quantity" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:textStyle="bold"
                            android:text="Price" />



                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </ScrollView>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#1Affffff"
        android:id="@+id/linearFooter"
        android:layout_below="@id/cardView"
        android:layout_alignLeft="@+id/cardView"
        android:layout_alignRight="@+id/cardView"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/linearBottom"
            android:padding="5dp"
            android:layout_weight=".5"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No. of items: " />

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/textViewItems"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:padding="5dp"
            android:layout_weight=".5">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Amount: "
                />

            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:id="@+id/textViewTotalAmount"
                />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearFooter"
        android:text="Collect"
        android:id="@+id/buttonCollect"
        android:layout_alignLeft="@id/linearFooter"
        android:layout_alignRight="@id/linearFooter"
        />
</RelativeLayout>
