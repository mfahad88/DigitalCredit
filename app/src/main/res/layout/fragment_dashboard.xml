<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.DashboardFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:id="@+id/linearScore"
        android:gravity="center_horizontal"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3">

            <android.support.v7.widget.CardView
                android:layout_width="100dp"
                android:layout_height="80dp"
                app:cardCornerRadius="5dp"
                android:layout_margin="5dp"
                android:id="@+id/card_view_base"
                app:cardBackgroundColor="#1Affffff">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="BASE SCORE"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-smallcaps"
                    android:layout_gravity="center_horizontal"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:padding="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textSize="30sp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:padding="5dp"
                    android:id="@+id/textViewBase"/>
            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".4"
            android:layout_gravity="center_horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="135dp"
                android:layout_height="135dp"
                app:cardCornerRadius="5dp"
                android:layout_margin="5dp"
                android:id="@+id/case_view_aggregation"
                app:cardBackgroundColor="#1Affffff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="sans-serif-smallcaps"
                    android:padding="5dp"
                    android:textSize="17sp"
                    android:textAlignment="center"
                    android:text="Aggregation Score"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textSize="55sp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:padding="5dp"
                    android:id="@+id/textViewAggregation"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3">

            <android.support.v7.widget.CardView
                android:layout_width="100dp"
                android:layout_height="80dp"
                app:cardCornerRadius="5dp"
                android:layout_margin="5dp"
                android:id="@+id/case_view_behavior"
                app:cardBackgroundColor="#1Affffff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="sans-serif-smallcaps"
                    android:padding="5dp"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:text="Behavior Score"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textSize="30sp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:padding="5dp"
                    android:id="@+id/textViewBehavior"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearScore"
        android:orientation="horizontal"
        android:id="@+id/linearAvail"
        android:gravity="center_horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            app:cardCornerRadius="5dp"
            android:layout_margin="5dp"
            app:cardBackgroundColor="#1Affffff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif-smallcaps"
                android:padding="5dp"
                android:textSize="17sp"
                android:textAlignment="center"
                android:text="Remaining limit"
                android:textStyle="bold" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:fontFamily="sans-serif-smallcaps"
                android:textSize="30sp"
                android:layout_gravity="bottom|center_horizontal"
                android:padding="5dp"
                android:id="@+id/textViewAvailablelimit"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            app:cardCornerRadius="5dp"
            android:layout_margin="5dp"
            app:cardBackgroundColor="#1Affffff">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif-smallcaps"
                android:padding="5dp"
                android:text="Avail Loan"
                android:textAlignment="center"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewRemainingAmt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:fontFamily="sans-serif-smallcaps"
                android:padding="5dp"
                android:text=""
                android:textSize="30sp"
                android:textStyle="bold" />

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/linearAvail"
        android:layout_margin="5dp"
        android:background="@drawable/square_edittext"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tableLayout"
                    android:layout_gravity="center">

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:padding="5dp"
                            android:text="Loan Id" />

                        <!--<TextView
                            android:id="@+id/textView2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:padding="5dp"
                            android:text="Created Date" />-->

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:padding="5dp"
                            android:text="Due Date" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:padding="5dp"
                            android:text="Amount" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:textStyle="bold"
                            android:text="Status" />

                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </ScrollView>



    </LinearLayout>
</RelativeLayout>