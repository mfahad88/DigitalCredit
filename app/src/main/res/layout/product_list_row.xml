<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:id="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imageView"
        android:text="Water"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/textViewProduct"
        android:layout_alignTop="@id/imageView"
        android:textColor="@android:color/black"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewProduct"
        android:layout_alignLeft="@id/textViewProduct"
        android:id="@+id/textViewPrice"
        android:text="Price:"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewProduct"
        android:layout_toRightOf="@id/textViewPrice"
        android:id="@+id/textViewPrices"
        android:layout_alignTop="@id/textViewPrice"
        android:layout_alignBottom="@id/textViewPrice"
        android:text="25.5"/>

    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/textViewDescription"
        android:layout_below="@id/textViewPrices"
        android:layout_alignLeft="@id/textViewPrice"
        android:textColor="@android:color/darker_gray"
        android:text="This is description"
         />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toRightOf="@id/textViewDescription"
        android:id="@+id/linearLayout"
        android:layout_alignTop="@id/textViewProduct">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="20sp"
            android:id="@+id/textViewMinus"
            android:padding="7dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:id="@+id/textViewQty"
            android:textSize="20sp"
            android:padding="3dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="20sp"
            android:id="@+id/textViewPlus"
            android:padding="7dp"
            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewAmount"
        android:text="Rs .51"
        android:textSize="20sp"
        android:layout_alignBottom="@id/textViewProduct"
        android:layout_alignParentRight="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cart"
        android:layout_below="@+id/textViewAmount"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>